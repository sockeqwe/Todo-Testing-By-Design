<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/create_step2"
        tools:visibility="visible"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <Button
            android:text="Create TODO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/create" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:theme="@android:style/ThemeOverlay.Material.Dark.ActionBar"
    />
    <Button
            android:text="Previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/previous" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:theme="@android:style/ThemeOverlay.Material.Dark.ActionBar"
    />
    <TextView
            android:text="Alright, let's create this:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/summary" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="18sp"
            android:theme="@android:style/ThemeOverlay.Material.Dark.ActionBar"
    />
    <TextView
            android:text="summary title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleSummary" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/summary" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="30sp"
            android:theme="@android:style/ThemeOverlay.Material.Dark.ActionBar"
    />
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loading"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="An error occurred, please retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/errorMessage"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/previous" android:textColor="#E91E63"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>